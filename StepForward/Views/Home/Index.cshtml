@Model  StepForward.Models.SectionTypeViewModel

<h2>Section Types</h2>

<ul>
    @foreach (var sectiontype in Model.SectionTypes)
    {
        <li>@sectiontype.Id - @sectiontype.Name</li>
    }
</ul>

<h2>Create Section Type</h2>

@using (Html.BeginForm("CreateSectionType", "Home", FormMethod.Post))
{
    <div>
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" value="@Model.NewSectionType.Name" />
    </div>
    <div>
        <input type="submit" value="Create" />
    </div>
}